<launch>
  <rosparam param="use_sim_time">true</rosparam>
  <include file="$(find parsec_navigation)/launch/hector_geotiff.launch" />
  <node pkg="gmapping_offline" type="gmapping_offline" name="gmapping_offline" output="screen">
    <rosparam>
      map_update_interval: 5.0
      maxUrange: 60.0
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      srr: 0.02
      srt: 0.04
      str: 0.02
      stt: 0.04
      linearUpdate: 0.5
      angularUpdate: 0.436
      temporalUpdate: -1.0
      resampleThreshold: 0.5
      particles: 200
      xmin: -1.0
      ymin: -1.0
      xmax: 1.0
      ymax: 1.0

      # The resolution of the map, i.e. the length of the edge of
      # one pixel in meters.
      delta: 0.025

      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005

      odom_frame: odom
      base_frame: base_footprint
      laser_topic: /base_scan

      map_file_base_name: gmapping_offline
    </rosparam>
    <param name="map_file_directory" type="string" value="$(find gmapping_offline)/maps/" />
  </node>
</launch>
