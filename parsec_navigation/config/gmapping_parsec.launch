<launch>
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <rosparam>
        odom_frame: odom

        # Time between updates in the map. We keep it small for better
        # user feedback during mapping. Increasing this will decrease CPU
        # usage. However, map updates are single-CPU bound.
        map_update_interval: 1.0
        
        maxUrange: 16.0
        sigma: 0.05
        kernelSize: 1
        lstep: 0.05
        astep: 0.05
        iterations: 5
        lsigma: 0.075
        ogain: 3.0
        lskip: 0
        srr: 0.01
        srt: 0.02
        str: 0.01
        stt: 0.02
        linearUpdate: 0.5
        angularUpdate: 0.436
        temporalUpdate: -1.0
        resampleThreshold: 0.5
        particles: 80
        xmin: -1.0
        ymin: -1.0
        xmax: 1.0
        ymax: 1.0

        # The resolution of the map, i.e. the length of the edge of
        # one pixel in meters.
        delta: 0.025
        
        llsamplerange: 0.01
        llsamplestep: 0.01
        lasamplerange: 0.005
        lasamplestep: 0.005

        base_frame: base_footprint
      </rosparam>
      <remap from="/scan" to="/base_scan" />
    </node>
</launch>
