<launch>
  <rosparam param="use_sim_time">true</rosparam>
  <include file="$(find parsec_navigation)/launch/hector_geotiff.launch" />
  <node pkg="gmapping_offline" type="gmapping_offline" name="gmapping_offline" output="log">
    <rosparam>
      map_update_interval: 5.0

      maxUrange: 60.0
      maxRange: 40.0
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      srr: 0.01
      srt: 0.02
      str: 0.01
      stt: 0.02
      linearUpdate: 0.5
      angularUpdate: 0.436
      temporalUpdate: -1.0
      resampleThreshold: 0.5
      particles: 60
      xmin: -1.0
      ymin: -1.0
      xmax: 1.0
      ymax: 1.0

      # The resolution of the map, i.e. the length of the edge of
      # one pixel in meters.
      delta: 0.025

      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005

      odom_frame: odom
      base_frame: base_footprint
      laser_topic: /base_scan

      bag_file_path:  /home/duhadway/ikea.bag
      map_file_directory: /home/duhadway/ikea_maps/geotiff/
      map_file_base_name: ikea_geo
    </rosparam>
  </node>
</launch>
