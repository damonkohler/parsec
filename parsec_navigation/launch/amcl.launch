<launch>
  <include file="$(find parsec_navigation)/launch/perception.launch" />

  <!-- Run the map server (to be changed to use correct map)-->
  <arg name="map_file" default="$(find parsec_navigation)/maps/google-m-alt-2011-10-13.yaml" />

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
  <node pkg="amcl" type="amcl" name="amcl">
    <rosparam>
      odom_model_type: diff
      gui_publish_rate: 10.0
      laser_max_beams: 60
      laser_max_range: 12.0"
      min_particles: 500
      max_particles: 2000
      kld_err: 0.05
      kld_z: 0.99
      odom_alpha1: 0.5
      odom_alpha2: 0.2
      odom_alpha3: 0.2
      odom_alpha4: 0.5
      laser_z_hit: 0.5
      laser_z_short: 0.1
      laser_z_max: 0.05
      laser_z_rand: 0.5
      laser_sigma_hit: 0.3
      laser_lambda_short: 0.1
      laser_model_type: likelihood_field
      laser_likelihood_max_dist: 1.0
      update_min_d: 0.05
      update_min_a: 0.1
      odom_frame_id: odom
      resample_interval: 2

      transform_tolerance: 1.0
      recovery_alpha_slow: 0.0
      recovery_alpha_fast: 0.0

      base_frame_id: base_footprint
    </rosparam>

    <remap from="scan" to="/base_scan" />
  </node>
  <include file="$(find parsec_navigation)/config/move_base.launch" />
</launch>

